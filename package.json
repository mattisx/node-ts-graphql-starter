{
  "name": "graphql-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "swc src -d dist --copy-files",
    "build-dev": "npm run build && node --experimental-specifier-resolution=node --inspect dist/index.js",
    "dev": "nodemon --ext ts --exec \"npm run build-dev\"",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "start": "node --experimental-specifier-resolution=node ./dist/index.js",
    "print-jwt-token": "node -r dotenv/config scripts/printJWTToken.js",
    "husky-install": "husky install",
    "download-env:dev": "gcloud config set project beet-dev-340313 && gsutil cp gs://beet-dev-secrets/.env.enc . && npm run decrypt-env",
    "download-env:prod": "gcloud config set project beet-prod && gsutil cp gs://beet-prod-secrets/.env.enc . && npm run decrypt-env",
    "upload-env:dev": "gcloud config set project beet-dev-340313 && npm run encrypt-env && gsutil cp .env.enc gs://beet-dev-secrets/.env.enc",
    "upload-env:prod": "gcloud config set project beet-prod && npm run encrypt-env && gsutil cp .env.enc gs://beet-prod-secrets/.env.enc",
    "decrypt-env": "gcloud kms decrypt --keyring=beet-keyring --key=beet-key --location=europe-west1 --ciphertext-file=.env.enc --plaintext-file=.env",
    "encrypt-env": "gcloud kms encrypt --keyring=beet-keyring --key=beet-key --location=europe-west1 --ciphertext-file=.env.enc --plaintext-file=.env"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "exports": "./build/index.js",
  "dependencies": {
    "@graphql-tools/schema": "^8.3.1",
    "apollo-server-core": "^3.6.2",
    "apollo-server-express": "^3.6.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "graphql": "^16.3.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.142",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.15",
    "@types/pg": "^8.6.4",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.5"
  }
}
